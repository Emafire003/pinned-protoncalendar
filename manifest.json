{

    "manifest_version": 2,
    "name": "Pinned ProtonCalendar",
    "version": "2.1",

    "description": "Opens new tab with ProtonCalendar website or switches to it if it's already open.",

    "icons": {
        "48": "icons/favicon.png"
    },

    "permissions": [
        "tabs"
    ],

    "browser_action": {
        "default_icon": {
            "48": "icons/browser-icon.png"
        },
        "default_title": "ProtonCalendar",
        "default_area": "navbar"
    },

    "background": {
        "scripts": ["protoncalendar.js"]
    }

  }


